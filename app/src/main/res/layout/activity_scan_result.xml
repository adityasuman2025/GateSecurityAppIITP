<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ScanResult">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/entryInfoLayout"
            android:visibility="gone"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:text="Entry Info"
                android:textSize="25dp"
                android:textColor="@color/colorAccent"
                android:textFontWeight="900"
                android:background="@color/grey"

                android:layout_margin="5dp"
                android:paddingVertical="5dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:text="Name"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"
                    android:background="@color/grey"

                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/personNameTextView"

                    android:text="name"
                    android:textColor="@color/grey"
                    android:textSize="16dp"
                    android:background="@drawable/back"

                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:text="ID"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"
                    android:background="@color/grey"

                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/personIdTextView"

                    android:text="id"
                    android:textColor="@color/grey"
                    android:textSize="16dp"
                    android:background="@drawable/back"

                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:text="Status"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"
                    android:background="@color/grey"

                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <RadioGroup
                    android:id="@+id/statusRadio"
                    android:padding="0dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="3"
                    android:background="@drawable/back"
                    android:layout_margin="0dp">
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:text="Gate"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"
                    android:background="@color/grey"

                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <RadioGroup
                    android:id="@+id/gateRadio"
                    android:padding="0dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="3"
                    android:background="@drawable/back"
                    android:layout_margin="0dp">
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:text="Person #"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"
                    android:background="@color/grey"

                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <RadioGroup
                    android:id="@+id/personCountRadio"
                    android:padding="0dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="3"
                    android:background="@drawable/back"
                    android:layout_margin="0dp">
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:text="Reason"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"
                    android:background="@color/grey"

                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <RadioGroup
                    android:id="@+id/reasonRadio"
                    android:padding="0dp"
                    android:background="@drawable/back"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="0dp">
                </RadioGroup>
            </LinearLayout>

            <Button
                android:id="@+id/submitBtn"

                android:text="Submit"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"

                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="10dp">
            <TextView
                android:id="@+id/entryInfoFeed"

                android:text="please wait"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textSize="16dp"
                android:textColor="@color/red"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>